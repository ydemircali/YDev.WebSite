@using YDev.Common.Models
@using YDev.Common.Helper
@model List<Slider>
@{
    ViewData["Title"] = "İhtiyaç Evim - Tüm İhtiyaçlarınız için Faizsiz Çözümler";
    List<Slider> sliders = ViewData["Sliders"] as List<Slider>;
    List<Content> cozumler = ViewData["Cozumler"] as List<Content>;
    List<Content> bloglar = ViewData["Bloglar"] as List<Content>;
}


    <div id="contentWrapper">

        <!-- Revolution slider start -->

        <div class="tp-banner-container">
            <div class="tp-banner">
                <ul>
                    @foreach (var slide in sliders)
                    {
                        <li data-slotamount="7" data-transition="fade" data-masterspeed="@slide.Time" data-saveperformance="on">
                            <img alt="" src="images/slider/dummy.png" data-lazyload="@slide.MediaUrl?.ToImageLink()">
                            <div class="caption lfr" data-y="90" data-x="right" data-speed="600" data-start="1000">
                                <img alt="" src="@slide.TinyMediaUrl?.ToImageLink()">
                            </div>
                            <div class="caption sfl large-desc witTxt tp-resizeme extraLargeFont rs-parallaxlevel-0"
                                 data-x="10" data-y="200" data-speed="600" data-start="2400" style="z-index: 9; max-width: auto; max-height: auto; white-space:nowrap;">
                                @Html.Raw(slide.Content)
                                <br />
                                <br />
                                <a href="#" class="btn btn-small main-bg" style="border-radius:3px !important; width:120px;">
                                    <span style="text-transform:capitalize !important ; font-size:13px; color:#66000b !important;">
                                        Detay İncele     <i class="fa fa-arrow-right"></i>
                                    </span>
                                </a>
                            </div>
                        </li>
                    }

                </ul>
            </div>
        </div>
        <!-- Revolution slider end -->
        <!-- Welcome Box start -->
        <div class="welcome">
            <div class="container">
                <h3 class="center block-head"><span class="main-color">Welcome To EXCEPTION</span> - Business HTML Template</h3>
                <p class="margin-bottom-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque imperdiet purus quis metus imperdiet fermentum. Suspendisse hendrerit id lacus id lobortis. Vestibulum quam elit, dapibus hendrerit id lacus id lobortis. Vestibulum quam elit, dapibus ac augue ut.</p>
            </div>
        </div>
        <!-- Welcome Box end -->
        <!-- Services boxes style 2 -->
        <div class="sectionWrapper">
            <div class="container">
                <h3 class="block-head">Çözümler & Modeller </h3>
                <div class="row padd-top-25">
                    @foreach (var item in cozumler)
                    {
                        <div class="cell-3 service-box-2 fx" data-animate="fadeInDown">
                            <div class="box-2-cont">
                                <i class="fa fa-check-square-o"></i>
                                <h4>@item.Title</h4>
                                @*<div class="center sub-title main-color">sub title</div>*@
                                <p class="mediumFont">@item.Spot</p>
                                <a class="r-more main-color" href="@item.Url-@item.Id">Devamı</a>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>

        <!-- Recent Portfolio projects -->
        <div class="sectionWrapper">
            <div class="container">
                <h3 class="block-head">Galeriler</h3>
                <div class="portfolioGallery portfolio">
                    <div>
                        <div class="portfolio-item">
                            <div class="img-holder">
                                <div class="img-over">
                                    <a href="portfolio-single.html" class="fx link"><b class="fa fa-link"></b></a>
                                    <a href="images/portfolio/1.jpg" class="fx zoom" data-gal="prettyPhoto[pp_gal]" title="Project Title"><b class="fa fa-search-plus"></b></a>
                                </div>
                                <img alt="" src="images/portfolio/1.jpg">
                            </div>
                            <div class="name-holder">
                                <a href="#" class="project-name">Project Title</a>
                                <span class="project-options">Project Category</span>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="portfolio-item">
                            <div class="img-holder">
                                <div class="img-over">
                                    <a href="portfolio-single.html" class="fx link"><b class="fa fa-link"></b></a>
                                    <a href="images/portfolio/1.jpg" class="fx zoom" data-gal="prettyPhoto[pp_gal]" title="Project Title"><b class="fa fa-search-plus"></b></a>
                                </div>
                                <img alt="" src="images/portfolio/1.jpg">
                            </div>
                            <div class="name-holder">
                                <a href="#" class="project-name">Project Title</a>
                                <span class="project-options">Project Category</span>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="portfolio-item">
                            <div class="img-holder">
                                <div class="img-over">
                                    <a href="portfolio-single.html" class="fx link"><b class="fa fa-link"></b></a>
                                    <a href="images/portfolio/1.jpg" class="fx zoom" data-gal="prettyPhoto[pp_gal]" title="Project Title"><b class="fa fa-search-plus"></b></a>
                                </div>
                                <img alt="" src="images/portfolio/1.jpg">
                            </div>
                            <div class="name-holder">
                                <a href="#" class="project-name">Project Title</a>
                                <span class="project-options">Project Category</span>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="portfolio-item">
                            <div class="img-holder">
                                <div class="img-over">
                                    <a href="portfolio-single.html" class="fx link"><b class="fa fa-link"></b></a>
                                    <a href="images/portfolio/1.jpg" class="fx zoom" data-gal="prettyPhoto[pp_gal]" title="Project Title"><b class="fa fa-search-plus"></b></a>
                                </div>
                                <img alt="" src="images/portfolio/1.jpg">
                            </div>
                            <div class="name-holder">
                                <a href="#" class="project-name">Project Title</a>
                                <span class="project-options">Project Category</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="view-all-projects"><a href="galeri">Tümünü Görüntüle</a></div>
            </div>
        </div>


        <!-- Portfolio start -->
        <div class="sectionWrapper">
            <div class="container">
                <div class="row">
                    <div class="cell-3">
                        <h3 class="block-head side-heading">Haberler <span>Bloglar</span></h3>
                        <p class="portfolio-lft-txt">Sizler için derlediğimiz Bizden haberlere ve blog yazılarımıza buradan ulaşabilirsiniz.</p>
                        <div class="viewAll">
                            <a class="view-all-projects" href="blog">Tümünü Görüntüle</a>
                        </div>
                    </div>
                    <div class="cell-9">
                        <div class="homeGallery portfolio">
                            <!-- staff item start -->
                            @foreach (var blog in bloglar)
                            {
                                <div>
                                    <div class="portfolio-item">
                                        <div class="img-holder">
                                            <div class="img-over">
                                                <a href="@blog.Url-@blog.Id" class="fx link"><b class="fa fa-link"></b></a>
                                                <a href="@(string.IsNullOrEmpty(blog.CoverImage) ? "images/ihtiyac_640x426.jpg" : blog.CoverImage.ToImageLink())" class="fx zoom" data-gal="prettyPhoto[2]"
                                                   title="@blog.Title">
                                                    <b class="fa fa-search-plus"></b>
                                                </a>
                                            </div>
                                            <img alt="" src="@(string.IsNullOrEmpty(blog.CoverImage) ? "images/ihtiyac_640x426.jpg" : blog.CoverImage.ToImageLink())">
                                        </div>
                                        <div class="name-holder">
                                            <a href="#" class="project-name">@blog.Title</a>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- staff item end -->

                        </div><!-- .portfolioGallery end -->
                    </div>
                </div>
            </div>
        </div>
        <!-- Portfolio end -->

    </div>