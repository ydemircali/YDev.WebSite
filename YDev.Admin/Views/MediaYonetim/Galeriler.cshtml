@using YDev.Common.Models
@model List<Gallery>
@{
    ViewData["Title"] = "Galeriler";
}

<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEAD-->
        <div class="page-head">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>
                    @ViewData["Title"]
                    <small>galerileri düzenle</small>
                </h1>
            </div>
            <!-- END PAGE TITLE -->
        </div>
        <!-- END PAGE HEAD-->
        <!-- BEGIN PAGE BASE CONTENT -->

        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet light bordered">

                    <div class="portlet-body">

                        <div class="row">

                            <div class="form-group col-md-6">
                                <label>Başlık</label>
                                <input class="form-control spinner" type="text" id="title" placeholder="Teslimatlar  gibi..." />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Açıklama</label>
                                <input type="text" class="form-control" id="content">
                            </div>
                            <div class="form-group col-md-12 right">
                                <a href="javascript:;" id="galeri_kaydet" data-galeri-id=0 class="btn green right">Kaydet</a>
                                <a href="javascript:;" id="vazgec" class="btn default right hidden">Vazgeç</a>
                            </div>
                        </div>

                        <hr />
                        <div class="clearfix"></div>

                        <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                            <thead>
                                <tr>
                                    <th> Başlık </th>
                                    <th> Açıklama </th>
                                    <th> İşlem </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td> @item.Title </td>
                                        <td> @item.Content </td>
                                        <td>
                                            <div>
                                                <a href="javascript:;" data-galeri-id="@item.Id" data-title="@item.Title"
                                                   data-content="@item.Content" class="btn btn-sm green editGaleri" type="button"
                                                   aria-expanded="false">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <a href="galeriDetay?galeriId=@item.Id" class="btn btn-sm green" 
                                                   type="button" title="Gözat"
                                                   aria-expanded="false">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>
                <!-- END EXAMPLE TABLE PORTLET-->
            </div>
        </div>

        <!-- END PAGE BASE CONTENT -->
    </div>
    <!-- END CONTENT BODY -->
</div>
<!-- END CONTENT -->

@section scripts
{
    <script type="text/javascript" src="~/assets/custom/galeriler.js"></script>
}