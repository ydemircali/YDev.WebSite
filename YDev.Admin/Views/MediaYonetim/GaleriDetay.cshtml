@using YDev.Common.Models
@model Gallery
@{
    ViewData["Title"] = Model.Title;
    string dataYoutube = string.Empty;
    List<Media> files = ViewData["Files"] as List<Media>;
    List<MediaGallery> mediaGalleries = ViewData["FilesGallery"] as List<MediaGallery>;
}

<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEAD-->
        <div class="page-head">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>
                    @ViewData["Title"]
                </h1>
            </div>
            <!-- END PAGE TITLE -->
        </div>
        <!-- END PAGE HEAD-->
        <!-- BEGIN PAGE BASE CONTENT -->

        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN PORTLET-->
                <div class="portlet light bordered">

                    <div class="portlet-body form">
                        <div class="row form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-md-2">Resim Seçiniz</label>
                                <div class="col-md-6">
                                    <select id="mediaId" class="form-control">
                                        <option value="" selected disabled>Seçiniz</option>
                                        @foreach (var item in files)
                                        {
                                            <option value="@item.Id">@item.Content (@item.Url)</option>

                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-8 right" style="float:right;">
                                    <a href="javascript:;" data-galeri-id="@Model.Id" class="btn green" id="medyaEkle">
                                        <i class="fa fa-arrow-down"></i> Ekle
                                    </a>
                                </div>
                            </div>
                        </div>

                        <h4> Galeri Medyaları</h4>
                        <hr />
                        <div class="clearfix"></div>

                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                                    <thead>
                                        <tr>
                                            <th> Resim </th>
                                            <th> Url </th>
                                            <th> İşlem </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in mediaGalleries)
                                        {
                                            <tr class="odd gradeX">
                                                <td> @item.Media.Content </td>
                                                <td> @item.Media.Url </td>
                                                <td>
                                                    <div>
                                                        <a href="javascript:;" data-id="@item.Id" data-galeri-id="@Model.Id"
                                                           class="btn btn-sm red deleteMediaGallery" type="button"
                                                           aria-expanded="false">
                                                            <i class="fa fa-trash"></i>
                                                        </a>
                                                        <a target="_blank" href="@item.Media.Url" class="btn btn-sm green"
                                                           type="button" title="Gözat"
                                                           aria-expanded="false">
                                                            <i class="fa fa-eye"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- END PORTLET-->
            </div>
        </div>

        <!-- END PAGE BASE CONTENT -->

    </div>
    <!-- END CONTENT BODY -->
</div>
<!-- END CONTENT -->
@section scripts
{
    <script type="text/javascript" src="~/assets/custom/galeriler.js"></script>
}
